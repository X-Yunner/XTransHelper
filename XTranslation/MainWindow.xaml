        <Style x:Key="MyToolTipStyle" TargetType="ToolTip">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel>
                            <Path HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  Data="M 6 0 L 0 6 L 12 6 Z"
                                  Fill="#E6333333"
                                  Margin="0,0,0,-1" />
                            <Border CornerRadius="2"
                                    Background="#E6333333"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                <TextBlock Text="{TemplateBinding ContentControl.Content}"
                                           Foreground="White"
                                           LineHeight="20"
                                           Margin="5"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Name="mainGrid"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <hc:NotifyIcon Text="X翻译助手 X_Yunner开发"
                       Icon="Resources/favicon.ico"
                       MouseDoubleClick="NotifyIcon_OnMouseDoubleClick">
            <hc:NotifyIcon.ContextMenu>
                <ContextMenu Width="150">
                    <MenuItem Height="35" Header="打开面板" VerticalContentAlignment="Center" Name="Open_Notify"
                              Click="Open_Notify_OnClick" />
                    <MenuItem Height="35" Header="退出程序" VerticalContentAlignment="Center" Name="Exit_Notify"
                              Click="Exit_Notify_OnClick" />
                </ContextMenu>
            </hc:NotifyIcon.ContextMenu>
        </hc:NotifyIcon>

        <Border Name="title_bar"
                Grid.Row="0"
                Height="30"
                BorderThickness="0,0,0,0"
                Background="White"
                BorderBrush="#e5e6eb">
            <!-- Background="#f5f5f5 -->

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <WrapPanel HorizontalAlignment="Left"
                               VerticalAlignment="Center">
                        <Path Data="{StaticResource Logo}"
                              Width="15"
                              Margin="10,0,0,0"
                              Fill="Black"
                              Stroke="Black"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                        <TextBlock Text="翻译助手"
                                   Margin="5,0,0,0"
                                   FontSize="15"
                                   FontFamily="{StaticResource AiliFontFamily}"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center" />
                    </WrapPanel>
                </Grid>

                <WrapPanel Name="title_bar_btn"
                           Grid.Column="2"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top">

                    <ToggleButton Name="TopBtn"
                                  Width="40"
                                  Height="{Binding Height,ElementName=title_bar}"
                                  Background="Transparent"
                                  IsChecked="{Binding TopWindow,Mode=TwoWay}"
                                  BorderThickness="0"
                                  FocusVisualStyle="{x:Null}"
                                  WindowChrome.IsHitTestVisibleInChrome="True">
                        <ToggleButton.ToolTip>
                            <ToolTip Style="{DynamicResource MyToolTipStyle}" Content="置顶" />
                        </ToggleButton.ToolTip>
                        <ToggleButton.Style>
                            <Style TargetType="{x:Type ToggleButton}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                                            <Border x:Name="Bg"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="0"
                                                    MinHeight="{TemplateBinding MinHeight}"
                                                    MinWidth="{TemplateBinding MinWidth}"
                                                    SnapsToDevicePixels="true"
                                                    Margin="{TemplateBinding Margin}">
                                                <Path Name="icon"
                                                      Width="14"
                                                      Stroke="Black"
                                                      Fill="black"
                                                      Stretch="Uniform"
                                                      Data="{StaticResource TopIcon}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,0,0" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bg" Property="Background"
                                                            Value="{StaticResource titleBar_btn_color1}" />
                                                    <Setter TargetName="icon" Property="Stroke"
                                                            Value="{StaticResource titleBar_btn_color2}" />
                                                    <Setter TargetName="icon" Property="Fill"
                                                            Value="{StaticResource titleBar_btn_color2}" />
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="icon" Property="Stroke"
                                                            Value="{StaticResource titleBar_btn_color2}" />
                                                    <Setter TargetName="icon" Property="Fill"
                                                            Value="{StaticResource titleBar_btn_color2}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <Button Name="MiniBtn"
                            Width="40"
                            Height="{Binding Height,ElementName=title_bar}"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="MiniBtn_OnClick"
                            FocusVisualStyle="{x:Null}"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Bg"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="0"
                                                    MinHeight="{TemplateBinding MinHeight}"
                                                    MinWidth="{TemplateBinding MinWidth}"
                                                    SnapsToDevicePixels="true"
                                                    Margin="{TemplateBinding Margin}">
                                                <Path Name="icon"
                                                      Width="14"
                                                      Stroke="Black"
                                                      Fill="black"
                                                      Stretch="Uniform"
                                                      Data="{StaticResource MiniIcon}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,0,0" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bg" Property="Background"
                                                            Value="{StaticResource titleBar_btn_color1}" />
                                                    <Setter TargetName="icon" Property="Stroke"
                                                            Value="{StaticResource titleBar_btn_color2}" />
                                                    <Setter TargetName="icon" Property="Fill"
                                                            Value="{StaticResource titleBar_btn_color2}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Name="CloseBtn"
                            Width="40"
                            Height="{Binding Height,ElementName=title_bar}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Click="CloseBtn_OnClick"
                            FocusVisualStyle="{x:Null}"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Bg"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="0,0,0,0"
                                                    MinHeight="{TemplateBinding MinHeight}"
                                                    MinWidth="{TemplateBinding MinWidth}"
                                                    SnapsToDevicePixels="true"
                                                    Margin="{TemplateBinding Margin}">
                                                <Path Name="icon"
                                                      Width="12"
                                                      Stroke="Black"
                                                      Fill="black"
                                                      Stretch="Uniform"
                                                      Data="{StaticResource CloseIcon}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,0,0" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bg" Property="Background"
                                                            Value="{StaticResource titleBar_btn_color3}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                </WrapPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <view:Index />
            <Border Name="InfoBtn"
                    Background="Transparent"
                    Width="20"
                    Height="20"
                    MouseLeftButtonDown="InfoBtn_OnMouseLeftButtonDown"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,10,5">
                <Path Name="HintIcon"
                      Stroke="#919191"
                      Fill="#919191"
                      Stretch="Uniform"
                      Data="{StaticResource InfoIcon}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center" />
                <Border.ToolTip>
                    <ToolTip Style="{DynamicResource MyToolTipStyle}" Content="关于" />
                </Border.ToolTip>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="HintIcon"
                                                Storyboard.TargetProperty="(Fill).(SolidColorBrush.Color)" To="#575757"
                                                Duration="0:0:0.3" />
                                <ColorAnimation Storyboard.TargetName="HintIcon"
                                                Storyboard.TargetProperty="(Stroke).(SolidColorBrush.Color)"
                                                To="#575757" Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="HintIcon"
                                                Storyboard.TargetProperty="(Fill).(SolidColorBrush.Color)" To="#919191"
                                                Duration="0:0:0.3" />
                                <ColorAnimation Storyboard.TargetName="HintIcon"
                                                Storyboard.TargetProperty="(Stroke).(SolidColorBrush.Color)"
                                                To="#919191" Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
        </Grid>


    </Grid>
</Window>